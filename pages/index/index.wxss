.container {
  /* height: 100vh; */
}

.sudoku {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  box-shadow: 0px 0px 7px rgba(0, 0, 0, .3)
}

.box {
  /* width: 17px;
  height: 17px; */
  margin: 0;
  /* padding: 7px; */
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  border-right: 1px dashed #eee;
  border-bottom: 1px dashed #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #eee;
  background: #567;
  /* borderradius对手机布局有影响 *//* border-radius: 2px; */
  position: relative;
}

.box.blank {
  color: #5cb85c;
}

.box .rcl {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.1);
}

.box.duplicate {
  color: #d9534f;
}

.box.show .showSame {
  color: #f0ad4e;
}

.row {
  display: flex;
  direction: row;
  justify-content: center;
  align-content: center;
}

.row:nth-child(1) {
  border-top: 2px solid #fff;
}

.row:nth-child(3n) {
  border-bottom: 2px solid #fff;
}

.row .box:first-child {
  border-left: 2px solid #fff;
}

.row .box:nth-child(3n) {
  border-right: 2px solid #fff;
}

.row:nth-child(3n) .box {
  border-bottom: none;
}

.title {
  display: none;
  font-size: 20px;
  line-height: 2;
  font-weight: bold;
}

.btnGroup {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 0 auto;
  position: absolute;
  bottom: 20px;
}

.btnGroup button {
  color: #fff;
  width: 70px;
  height: 30px;
  border-radius: 2px;
  font-size: 12px;
  line-height: 30px;
  padding: 0;
}

.btnGroup .generate {
  background: #5cb85c;
}

.btnGroup .generate.button-hover {
  background: #449d44;
}

.btnGroup .shade {
  background: #5bc0de;
}

.btnGroup .shade.button-hover {
  background: #31b0d5;
}

.btnGroup .cancleShade {
  background: #f0ad4e;
}

.btnGroup .cancleShade.button-hover {
  background: #ec971f;
}

.panel {
  width: 102px;
  height: 102px;
  /* border: 1px solid red; */
  text-align: center;
  position: absolute;
  box-shadow: 2px 3px 7px rgba(0, 0, 0, 0.3);
  transform: scale(0);
}

.panel > view {
  width: 30px;
  height: 30px;
  line-height: 30px;
  /* border: 1px solid blue; */
  color: #fff;
  background: rgba(0, 0, 0, 0.2);
  float: left;
  /* margin, padding, border都算在width内 */
  margin: 2px;
  font-weight: bold;
}

.toolTip {
  position: absolute;
  left: 10px;
  font-size: 12px;
  color: #777;
}