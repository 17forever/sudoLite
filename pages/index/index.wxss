.container {
  /* height: 100vh; */
}
.box {
  width: 17px;
  height: 17px;
  margin: 0;
  padding: 7px;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  border: 1px dashed #ddd;
  display: flex;
  justify-content: center;
  align-items: center;
}

.row {
  display: flex;
  direction: row;
  justify-content: center;
  align-content: center;
}

.row:nth-child(1) {
  border-top: 2px solid #777;
}

.row:nth-child(3n) {
  border-bottom: 2px solid #777;
}

.row .box:first-child {
  border-left: 2px solid #777;
}

.row .box:nth-child(3n) {
  border-right: 2px solid #777;
}

.wrap {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.wrap button {
  margin: 10px;
}

.title {
  font-size: 20px;
  line-height: 2;
  font-weight: bold;
}

.btnGroup {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin: 10px;
}
 .btnGroup button {
   color: #fff;
 }

.btnGroup .generate {
  background: #5cb85c;
}
.btnGroup .generate.button-hover {
  background: #449d44;
}

.btnGroup .shade {
  background: #5bc0de;
}
.btnGroup .shade.button-hover {
  background: #449d44;
}

.btnGroup .cancleShade {
  background: #f0ad4e;
}
.btnGroup .cancleShade.button-hover {
  background: #ec971f;
}